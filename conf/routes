# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /add                        controllers.Application.getEntryInfo

POST    /add                        controllers.Application.addEntry

GET     /json                       controllers.Application.toJson

GET     /edit/:id                   controllers.Application.edit(id:Long)

POST    /edit/:id                   controllers.Application.updateEntry(id:Long)

POST    /delete/:id                   controllers.Application.deleteEntry(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
