# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /entry/new                  controllers.Application.defineNewEntry

POST    /entry/new                  controllers.Application.addEntry

GET     /json                       controllers.Application.toJson

GET     /entry/edit/:id             controllers.Application.edit(id:Long)

POST    /entry/edit/:id             controllers.Application.updateEntry(id:Long)

POST    /entry/delete/:id           controllers.Application.deleteEntry(id:Long)

GET     /test                       controllers.Application.populateCategories

GET     /category/new               controllers.Application.defineNewCategory

POST    /category/new               controllers.Application.addCategory

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
